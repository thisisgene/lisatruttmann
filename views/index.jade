extends layout

block content
  #main
    #mobile_menu
      .mobile_menu-header
        h1.mobile-title Lisa Truttmann
        .mobile_menu-button
          span
      .mobile_menu-container
        ul.menu
          each project in projects
            if project.category == true && project.visible == true
              li
                a(href='/project/' + project._id, name='title')= project.title
        ul.menu
          li works
          each project in projects
            if project.category !== true && project.visible == true
              li
                a(href='/project/' + project._id, name='title')= project.title
